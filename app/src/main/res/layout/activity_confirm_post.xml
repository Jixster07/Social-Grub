<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmPost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:text="Confirm Your Post" />

            <Button
                android:id="@+id/cancelPostButton"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:text="Cancel Post" />

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/changeTitleButton"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:text="Change Title" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="329dp"
                android:layout_height="258dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <Button
                android:id="@+id/changeImageButton"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:text="Change Image" />

            <TextView
                android:id="@+id/description"
                android:layout_width="329dp"
                android:layout_height="178dp"
                android:text="TextView" />

            <Button
                android:id="@+id/changeDescriptionButton"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:text="Change Description" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="334dp"
                android:layout_height="177dp" />

            <Button
                android:id="@+id/changeIngredientsButton"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:text="Change Ingredients" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="328dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/changeDirectionsButton"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:text="Change Directions" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/changeTagsButton"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:text="Change Tags" />

            <Button
                android:id="@+id/uploadPostButton"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:text="Post" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>